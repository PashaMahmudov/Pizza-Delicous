

@model IEnumerable<pizza.Models.Statistics>

<section class="ftco-counter img"
         style="background-image: url('images/bg_2.jpg'); background-size: cover; background-position: center; background-repeat: no-repeat; position: relative; width: 100%; min-height: 500px;"
         data-stellar-background-ratio="0.5">

    <!-- Orijinal overlay, azca qara -->
    <div style="background-color: rgba(0,0,0,0.3); position: absolute; top:0; left:0; width:100%; height:100%; z-index:1;"></div>

    <!-- Statistics kontenti -->
    <div class="container" style="position: relative; z-index:2;">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="row">

                    @foreach (var item in Model)
                    {
                        <div class="col-md-6 col-lg-3 d-flex justify-content-center counter-wrap ftco-animate" style="margin-bottom: 30px;">
                            <div class="block-18 text-center">
                                <div class="text">
                                    <div class="icon mb-3">
                                        @if (!string.IsNullOrEmpty(item.Icon))
                                        {
                                            <img src="@item.Icon" style="width:50px;height:50px;" />
                                        }
                                    </div>
                                    <strong class="number" data-number="@item.Number" style="font-size: 40px;">0</strong>
                                    <span>@item.Name</span>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>





