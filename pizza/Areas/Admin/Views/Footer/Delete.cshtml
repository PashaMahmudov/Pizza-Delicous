@model pizza.Models.Footer
@{
    ViewData["Title"] = "Delete Footer";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Are you sure you want to delete this footer?</h2>

<div>
    <strong>About:</strong> @Model.AboutText
</div>
<div>
    <strong>Address:</strong> @Model.Address
</div>
<div>
    <strong>Email:</strong> @Model.Email
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
