@model IEnumerable<pizza.Models.Footer>
@{
    ViewData["Title"] = "Footer List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mb-4">Footer List</h1>

<a asp-action="Create" class="btn btn-success mb-3">Create New Footer</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>About Text</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Twitter</th>
            <th>Facebook</th>
            <th>Instagram</th>
            <th>Blog 1 Title</th>
            <th>Blog 1 Image</th>
            <th>Blog 2 Title</th>
            <th>Blog 2 Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.AboutText</td>
                <td>@item.Address</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>@item.Twitter</td>
                <td>@item.Facebook</td>
                <td>@item.Instagram</td>
                <td>@item.BlogTitle1</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.BlogImage1))
                    {
                        <img src="@item.BlogImage1" width="80" height="50" />
                    }
                </td>
                <td>@item.BlogTitle2</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.BlogImage2))
                    {
                        <img src="@item.BlogImage2" width="80" height="50" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm mb-1">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
