@model List<pizza.Models.Slider>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<a asp-area="Admin" asp-controller="HomeSliders" asp-action="Create" class="btn btn-info mb-3">Create</a>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slider Məlumatları</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    <div class="form-check form-check-muted m-0">
                                        <label class="form-check-label">
                                            <input type="checkbox" class="form-check-input">
                                        </label>
                                    </div>
                                </th>
                                <th>Id</th>
                                <th>Subheading</th>
                                <th>Title</th>
                                <th>Image</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="form-check form-check-muted m-0">
                                            <label class="form-check-label">
                                                <input type="checkbox" class="form-check-input" @(item.IsActive ? "checked" : "") disabled />
                                            </label>
                                        </div>
                                    </td>
                                    <td>@item.Id</td>
                                    <td>@item.Subheading</td>
                                    <td>@item.Title</td>
                                    <td>
                                        <img src="@item.Img" alt="@item.Title" style="width:80px; height:auto; border-radius:8px;" />
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                                        <a asp-action="Read" asp-route-id="@item.Id" class="btn btn-sm btn-info">Read</a>
                                        <a asp-area="Admin" asp-controller="HomeSliders" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                                        <a asp-action="ToggleStatus"
                                           asp-route-id="@item.Id"
                                           class="btn btn-sm @(item.IsActive ? "btn-secondary" : "btn-success")">
                                            @(item.IsActive ? "Deactive" : "Active")
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                </div>
            </div>
        </div>
    </div>
</div>
