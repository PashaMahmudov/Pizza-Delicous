@model pizza.Models.Slider

@{
    ViewData["Title"] = "Delete Slider";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h3>Bu slideri silmək istədiyinizə əminsiniz?</h3>

    <div class="card mt-4 p-3">
        <h5>@Model.Title</h5>
        <p>@Model.Subheading</p>
        <img src="~/@Model.Img" alt="@Model.Title" style="width:200px; border-radius:8px;" />
    </div>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post" class="mt-4">
        <button type="submit" class="btn btn-danger">Yes, delete</button>
        <a asp-action="Index" class="btn btn-secondary">No, cancel</a>
    </form>
</div>
