@model IEnumerable<pizza.Models.Gallery>
@{
    ViewData["Title"] = "Gallery List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Gallery List</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Yeni Şəkil Əlavə Et</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Şəkil</th>
            <th>Əməliyyatlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" width="120" />
                    }
                </td>
                <td>
                    <a asp-action="Read" asp-route-id="@item.Id" class="btn btn-info btn-sm">Read</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
