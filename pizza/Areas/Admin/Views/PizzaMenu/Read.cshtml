@model pizza.Models.PizzaMenu
@{
    ViewData["Title"] = "Pizza Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="mb-3">
    <label class="form-label">Name</label>
    <input class="form-control" value="@Model.Name" readonly />
</div>
<div class="mb-3">
    <label class="form-label">Description</label>
    <textarea class="form-control" readonly>@Model.Description</textarea>
</div>
<div class="mb-3">
    <label class="form-label">Price</label>
    <input class="form-control" value="@Model.Price" readonly />
</div>
<div class="mb-3">
    <label class="form-label">Status</label>
    <input class="form-control" value="@(Model.IsActive ? "Active" : "Inactive")" readonly />
</div>
<div class="mb-3">
    <label class="form-label">Image</label><br />
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" width="150" />
    }
</div>

<a asp-action="Index" class="btn btn-secondary">Back</a>
