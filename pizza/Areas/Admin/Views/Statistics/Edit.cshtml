<h1>Edit</h1>

@model pizza.Models.Statistics
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Statistic</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input asp-for="Name" type="text" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Number</label>
        <input asp-for="Number" type="number" class="form-control" />
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FormFile" class="form-label">Icon / Şəkil seç</label>
        <input asp-for="FormFile" type="file" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.Icon))
        {
            <img src="@Model.Icon" alt="Icon" width="100" class="mt-2" />
        }
    </div>

    <div class="mb-3 form-check">
        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
        <label asp-for="IsActive" class="form-check-label">Aktiv</label>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
