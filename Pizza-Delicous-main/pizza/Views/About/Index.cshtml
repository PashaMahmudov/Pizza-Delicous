<section class="ftco-appointment" id="contact">
    <div class="overlay"></div>
    <div class="container-wrap">
        <div class="row no-gutters d-md-flex align-items-center">
            <div class="col-md-6 d-flex align-self-stretch">
                <div class="contact-image"
                     style="width:100%; height:500px; background-image: url('/images/about - Copy.jpg');
       background-size: cover;
       background-position: center;
       background-repeat: no-repeat;">
                </div>
            </div>
            <div class="col-md-6 appointment ftco-animate">
                <h3 class="mb-3">Bizimlə əlaqə</h3>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["Success"]
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["Error"]
                    </div>
                }

                <form asp-controller="About" asp-action="SendMessage" method="post" class="appointment-form">
                    @Html.AntiForgeryToken()

                    <div class="d-md-flex">
                        <div class="form-group w-100">
                            <input type="text" name="FirstName" class="form-control" placeholder="Ad" required>
                        </div>
                    </div>

                    <div class="d-md-flex">
                        <div class="form-group w-100">
                            <input type="text" name="LastName" class="form-control" placeholder="Soyad" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <textarea name="Message" cols="30" rows="3" class="form-control" placeholder="Mesajınız" required></textarea>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Göndər" class="btn btn-primary py-3 px-4">
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
