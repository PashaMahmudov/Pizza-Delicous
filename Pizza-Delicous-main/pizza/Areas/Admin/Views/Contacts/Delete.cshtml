@model pizza.Models.Contact
@{
    ViewData["Title"] = "Delete Contact";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Delete Contact</h4>
        </div>
        <div class="card-body text-center">
            <h5 class="text-danger fw-bold mb-3">
                Are you sure you want to delete this contact?
            </h5>
            <div class="card mx-auto p-3" style="max-width: 500px;">
                <dl class="row text-start">
                    <dt class="col-sm-5">Phone Number</dt>
                    <dd class="col-sm-7">@Model.PhoneNumber</dd>
                    <dt class="col-sm-5">Address</dt>
                    <dd class="col-sm-7">@Model.Address</dd>
                    <dt class="col-sm-5">Work Days</dt>
                    <dd class="col-sm-7">@Model.WorkDays</dd>
                    <dt class="col-sm-5">Work Hours</dt>
                    <dd class="col-sm-7">@Model.WorkHours</dd>
                </dl>
            </div>
            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="mt-4">
                <input type="hidden" name="confirmDelete" value="true" />
                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-trash"></i> Yes, delete
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4 ms-2">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>