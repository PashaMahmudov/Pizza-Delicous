@model pizza.Models.OurMenu

@{
    ViewData["Title"] = "Delete Menu Item";
}

<h2>Delete Menu Item</h2>

<div class="card mt-4">
    <div class="card-body">
        <h5 class="card-title">Are you sure you want to delete this menu item?</h5>

        <div class="mb-3">
            <label class="form-label"><strong>Name:</strong></label>
            <p>@Model.Name</p>
        </div>

        <div class="mb-3">
            <label class="form-label"><strong>Description:</strong></label>
            <p>@Model.Description</p>
        </div>

        <div class="mb-3">
            <label class="form-label"><strong>Price:</strong></label>
            <p>@Model.Price.ToString("C")</p>
        </div>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="mb-3">
                <label class="form-label"><strong>Image:</strong></label>
                <div>
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" style="max-height:200px;" />
                </div>
            </div>
        }

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>
