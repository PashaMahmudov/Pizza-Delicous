@model IEnumerable<pizza.Models.About>
@{
    ViewData["Title"] = "About List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mt-4">
    <h1>About List</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Img))
                        {
                            <img src="~/@item.Img" alt="@item.Title" style="width:80px; height:auto; border-radius:8px;" />
                        }
                    </td>
                    <td>@item.Title</td>
                    <td>@(item.Description?.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</td>
                    <td>
                        <span class="badge @(item.IsActive ? "bg-success" : "bg-danger")">
                            @(item.IsActive ? "Active" : "Inactive")
                        </span>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        <a asp-action="ToggleStatus" asp-route-id="@item.Id"
                           class="btn btn-sm @(item.IsActive ? "btn-secondary" : "btn-success")">
                            @(item.IsActive ? "Deactivate" : "Activate")
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>