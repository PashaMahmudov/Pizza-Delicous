@model pizza.Models.Slider
@{
    ViewData["Title"] = "Create Slider";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Add New Slider</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" asp-controller="HomeSliders" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Subheading" class="form-label fw-bold">Subheading</label>
                    <input asp-for="Subheading" class="form-control" placeholder="Enter subheading..." />
                    <span asp-validation-for="Subheading" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-bold">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter title..." />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter description..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="formFile" class="form-label fw-bold">Select Image</label>
                    <input asp-for="formFile" type="file" class="form-control" />
                    <span asp-validation-for="formFile" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">Active</label>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-success px-4">Save</button>
                    <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
