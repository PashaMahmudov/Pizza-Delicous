@model List<pizza.Models.Statistic>
@{
    ViewData["Title"] = "Statistics";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Statistics List</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add New Statistic</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Icon</th>
            <th>Number</th>
            <th>Title</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td><i class="@item.Icon"></i> @item.Icon</td>
                <td>@item.Number</td>
                <td>@item.Title</td>
                <td>@(item.IsActive ? "Yes" : "No")</td>
                <td>
                    <a asp-action="Read" asp-route-id="@item.Id" class="btn btn-sm btn-info">Read</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    <a asp-action="ToggleStatus" asp-route-id="@item.Id" class="btn btn-sm @(item.IsActive ? "btn-secondary" : "btn-success")">
                        @(item.IsActive ? "Deactivate" : "Activate")
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
