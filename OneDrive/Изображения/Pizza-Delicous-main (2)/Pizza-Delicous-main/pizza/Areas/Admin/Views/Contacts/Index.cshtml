@model pizza.Models.Contact
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h1>Contact Information</h1>
<a asp-action="Create" class="btn btn-info mb-3">Create</a>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Contact Details</h4>
                @if (Model != null)
                {
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        <div class="form-check form-check-muted m-0">
                                            <label class="form-check-label">
                                                <input type="checkbox" class="form-check-input" disabled />
                                            </label>
                                        </div>
                                    </th>
                                    <th>Field</th>
                                    <th>Value</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <div class="form-check form-check-muted m-0">
                                            <label class="form-check-label">
                                                <input type="checkbox" class="form-check-input" checked disabled />
                                            </label>
                                        </div>
                                    </td>
                                    <td>Phone Number</td>
                                    <td>@Model.PhoneNumber</td>
                                    <td rowspan="9">
                                        <div class="mb-2">
                                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                                            <a asp-action="Read" asp-route-id="@Model.Id" class="btn btn-sm btn-info">Read</a>
                                        </div>
                                        <div>
                                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                                <tr><td></td><td>Phone Description</td><td>@Model.PhoneDescription</td></tr>
                                <tr><td></td><td>Address</td><td>@Model.Address</td></tr>
                                <tr><td></td><td>Address Description</td><td>@Model.AddressDescription</td></tr>
                                <tr><td></td><td>Work Days</td><td>@Model.WorkDays</td></tr>
                                <tr><td></td><td>Work Hours</td><td>@Model.WorkHours</td></tr>
                                <tr><td></td><td>Twitter</td><td>@Model.TwitterUrl</td></tr>
                                <tr><td></td><td>Facebook</td><td>@Model.FacebookUrl</td></tr>
                                <tr><td></td><td>Instagram</td><td>@Model.InstagramUrl</td></tr>
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">No contact information available. Please create one.</p>
                }
            </div>
        </div>
    </div>
</div>
