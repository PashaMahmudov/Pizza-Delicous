@model pizza.Models.GalleryImage

@{
    ViewData["Title"] = "Gallery Image Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h2>Gallery Image Details</h2>

    <div class="card p-3 mt-3" style="width: 300px;">
        <img src="@Model.Img" class="card-img-top mb-3" style="border-radius:8px;" />
        <div class="card-body">
            <p><strong>Id:</strong> @Model.Id</p>
            <p><strong>Active:</strong> @(Model.IsActive ? "Yes" : "No")</p>
        </div>
    </div>

    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
</div>
