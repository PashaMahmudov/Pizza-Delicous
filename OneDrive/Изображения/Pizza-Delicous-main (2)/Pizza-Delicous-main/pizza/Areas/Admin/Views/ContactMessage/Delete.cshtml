@model pizza.Models.ContactMessage
@{
    ViewData["Title"] = "Delete Message";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm bg-dark text-white border-0 mt-4">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">Delete Message</h4>
    </div>

    <div class="card-body">
        <p class="lead">This message will be permanently deleted.</p>
        <hr class="border-light" />

        <dl class="row">
            <dt class="col-sm-3">Full Name</dt>
            <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

           

            <dt class="col-sm-3">Message</dt>
            <dd class="col-sm-9">@Model.Message</dd>

            <dt class="col-sm-3">Sent Date</dt>
            <dd class="col-sm-9">@Model.DateTime.ToString("yyyy-MM-dd HH:mm")</dd>
        </dl>

        <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post" class="mt-3">
            @Html.AntiForgeryToken()
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </form>
    </div>
</div>
