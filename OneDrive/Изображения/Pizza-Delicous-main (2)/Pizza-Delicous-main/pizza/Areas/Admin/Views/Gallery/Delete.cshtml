@model pizza.Models.GalleryImage
@{
    ViewData["Title"] = "Delete Gallery Image";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h3>Are you sure you want to delete this image?</h3>

    <div class="card mt-4 p-3">
        <img src="@Model.Img" style="width:200px; border-radius:8px;" />
        <p>Active: @(Model.IsActive ? "Yes" : "No")</p>
    </div>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post" class="mt-4">
        <button type="submit" class="btn btn-danger">Yes, delete</button>
        <a asp-action="Index" class="btn btn-secondary">No, cancel</a>
    </form>
</div>
