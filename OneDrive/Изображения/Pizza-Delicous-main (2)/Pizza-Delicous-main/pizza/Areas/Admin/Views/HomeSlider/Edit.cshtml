@model pizza.Models.Slider
@{
    ViewData["Title"] = "Edit Slider";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-warning text-white">
            <h4 class="mb-0">Edit Slider</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" asp-controller="HomeSlider" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Img" />

                <div class="mb-3">
                    <label asp-for="Subheading" class="form-label fw-bold">Subheading</label>
                    <input asp-for="Subheading" class="form-control" placeholder="Enter subheading..." />
                    <span asp-validation-for="Subheading" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-bold">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter title..." />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter description..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Current Image</label>
                    @if (!string.IsNullOrEmpty(Model.Img))
                    {
                        <div class="mb-2">
                            <img src="~/@Model.Img" alt="@Model.Title" class="img-thumbnail" style="max-width: 200px;" />
                        </div>
                    }
                    <label asp-for="formFile" class="form-label">Select New Image (optional)</label>
                    <input asp-for="formFile" type="file" class="form-control" />
                    <span asp-validation-for="formFile" class="text-danger"></span>
                    <small class="text-muted">Leave empty to keep current image</small>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">Active</label>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-warning px-4">
                        <i class="bi bi-save"></i> Update
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4 ms-2">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

