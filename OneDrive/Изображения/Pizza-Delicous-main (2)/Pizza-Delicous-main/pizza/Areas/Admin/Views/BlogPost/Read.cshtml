@model pizza.Models.BlogPost

<h2>Blog Details</h2>

<div class="card mb-3" style="max-width: 800px;">
    <div class="row g-0">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="col-md-4">
                <img src="@Model.ImageUrl" class="img-fluid rounded-start" />
            </div>
        }
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text"><small class="text-muted">Author: @Model.Author | Date: @Model.Date.ToString("yyyy-MM-dd") | Comments: @Model.CommentCount</small></p>
                <a class="btn btn-secondary" href="/Admin/Blogs">Back</a>
            </div>
        </div>
    </div>
</div>
