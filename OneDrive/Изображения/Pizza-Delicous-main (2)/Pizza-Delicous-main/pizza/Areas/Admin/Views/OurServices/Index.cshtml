@model List<pizza.Models.OurService>

@{
    ViewData["Title"] = "Our Services";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Our Services</h1>

<a asp-action="Create" class="btn btn-info mb-3">+ Create New Service</a>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Xidmət Məlumatları</h4>
                <div class="table-responsive">
                    <table class="table table-bordered align-middle">
                        <thead class="table-success">
                            <tr>
                                <th>#</th>
                                <th>Id</th>
                                <th>Icon</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" @(item.IsActive ? "checked" : "") disabled />
                                    </td>
                                    <td>@item.Id</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Img))
                                        {
                                            <img src="@item.Img" width="60" height="60" style="object-fit:cover; border-radius:8px;" />
                                        }
                                        else if (!string.IsNullOrEmpty(item.Icon))
                                        {
                                            <i class="@item.Icon fs-3 text-success"></i>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No Icon</span>
                                        }
                                    </td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <span class="badge @(item.IsActive ? "bg-success" : "bg-secondary")">
                                            @(item.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>
                                        <!-- Read Button (Separate link, NOT form) -->
                                        <a asp-action="Read" asp-route-id="@item.Id" class="btn btn-sm btn-info">Read</a>

                                        <!-- Edit Button -->
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>

                                        <!-- Delete Form -->
                                        <form asp-action="Delete" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this service?');">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                        </form>

                                        <!-- Toggle Status Form -->
                                        <form asp-action="ToggleStatus" method="post" style="display:inline;">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm @(item.IsActive ? "btn-secondary" : "btn-success")">
                                                @(item.IsActive ? "Deactivate" : "Activate")
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
