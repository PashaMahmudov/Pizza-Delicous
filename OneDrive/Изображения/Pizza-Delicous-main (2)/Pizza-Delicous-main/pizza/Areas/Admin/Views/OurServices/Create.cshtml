@{
    ViewData["Title"] = "Create Service";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model pizza.Models.OurService

<h2>Add New Service</h2>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label>Image</label>
        <input asp-for="FormFile" type="file" class="form-control" />
    </div>

    <div class="form-group">
        <label>Icon (optional)</label>
        <input asp-for="Icon" class="form-control" placeholder="e.g. fa-solid fa-star" />
    </div>

    <div class="form-group">
        <label>Title</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-check mt-3 mb-2">
        <input asp-for="IsActive" class="form-check-input" type="checkbox" id="IsActiveSwitch" />
        <label class="form-check-label" for="IsActiveSwitch">Active Status</label>
    </div>

    <button type="submit" class="btn btn-success mt-2">Create</button>
    <a href="/Admin/OurServices/Index" class="btn btn-secondary mt-2">Cancel</a>
</form>


