@model IEnumerable<pizza.Models.GalleryImage>
@{
    ViewData["Title"] = "Gallery List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Gallery List</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add New Image</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Image</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.Img" style="width:120px; border-radius:6px;" />
                </td>
                <td>
                    @(item.IsActive ? "Yes" : "No")
                </td>
                <td>
                    <a asp-action="Read" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Read</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>

                    <!-- Toggle Active/Inactive -->
                    <form asp-action="ToggleStatus" asp-route-id="@item.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm @(item.IsActive ? "btn-warning" : "btn-success")">
                            @(item.IsActive ? "Deactivate" : "Activate")
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
