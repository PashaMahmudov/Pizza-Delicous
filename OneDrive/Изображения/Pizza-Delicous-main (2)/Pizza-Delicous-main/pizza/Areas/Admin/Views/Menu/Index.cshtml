@model IEnumerable<pizza.Models.Product>
@{
    ViewData["Title"] = "Menu Products";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Menu Products</h2>
<a class="btn btn-primary" asp-action="Create">Add New Product</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Category</th>
            <th>Image</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>$@item.Price</td>
                <td>@item.Category?.Name</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Img))
                    {
                        <img src="@item.Img" width="80" />
                    }
                </td>
                <td>@item.IsActive</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-primary" asp-action="Read" asp-route-id="@item.Id">View</a>
                    <a class="btn btn-sm btn-warning" asp-action="ToggleStatus" asp-route-id="@item.Id">Toggle</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
