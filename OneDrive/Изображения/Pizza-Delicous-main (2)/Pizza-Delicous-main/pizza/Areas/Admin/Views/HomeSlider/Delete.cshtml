@model pizza.Models.Slider

@{
    ViewData["Title"] = "Delete Slider";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Delete Confirmation</h4>
        </div>

        <div class="card-body text-center">
            <h5 class="text-danger fw-bold mb-3">
                Bu slideri silmək istədiyinizə əminsiniz?
            </h5>

            <div class="card mx-auto p-3" style="max-width: 400px;">
                <img src="~/@Model.Img" alt="@Model.Title" class="img-fluid rounded mb-3" style="max-height:180px;" />
                <h5 class="fw-semibold">@Model.Title</h5>
                <p>@Model.Subheading</p>
                <p class="text-muted">@Model.Description</p>
            </div>

            <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post" class="mt-4">
                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-trash"></i> Yes, delete
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4 ms-2">
                    <i class="bi bi-arrow-left"></i> No, cancel
                </a>
            </form>
        </div>
    </div>
</div>
