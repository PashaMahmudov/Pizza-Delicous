@model pizza.Models.OurService

@{
    ViewData["Title"] = "Service Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Service Details</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Title</h4>
        <p>@Model.Description</p>
        <p>
            <strong>Status:</strong> @(Model.IsActive ? "Active" : "Inactive")
        </p>
        @if (!string.IsNullOrEmpty(Model.Icon))
        {
            <img src="@Model.Icon" alt="@Model.Title" style="max-width:200px;" />
        }
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mt-3">Edit</a>
