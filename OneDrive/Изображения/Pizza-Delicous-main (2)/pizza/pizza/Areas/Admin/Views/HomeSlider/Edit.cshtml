@model pizza.Models.Slider

@{
    ViewData["Title"] = "Slider Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">Slider Details</h4>
        </div>

        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <h5 class="fw-semibold">Subheading:</h5>
                    <p>@Model.Subheading</p>

                    <h5 class="fw-semibold">Title:</h5>
                    <p>@Model.Title</p>

                    <h5 class="fw-semibold">Description:</h5>
                    <p>@Model.Description</p>

                    <h5 class="fw-semibold">Status:</h5>
                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                        @(Model.IsActive ? "Active" : "Inactive")
                    </span>
                </div>

                <div class="col-md-6 text-center">
                    <h5 class="fw-semibold mb-2">Image</h5>
                    @if (!string.IsNullOrEmpty(Model.Img))
                    {
                        <img src="~/@Model.Img" alt="@Model.Title" class="img-fluid rounded shadow-sm" style="max-height:200px;" />
                    }
                    else
                    {
                        <p class="text-muted fst-italic">No image uploaded</p>
                    }
                </div>
            </div>

            <div class="text-end">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary px-4 ms-2">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            </div>
        </div>
    </div>
</div>
