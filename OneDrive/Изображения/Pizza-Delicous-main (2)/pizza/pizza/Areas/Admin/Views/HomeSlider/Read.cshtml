@model pizza.Models.Slider

@{
    ViewData["Title"] = "Read";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3>@Model.Title</h3>
    </div>
    <div class="card-body">
        <p><b>Subheading:</b> @Model.Subheading</p>
        <p><b>Description:</b> @Model.Description</p>
        <img src="~/@Model.Img" alt="@Model.Title" style="max-width:300px; height:auto; border-radius:10px;" />
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
