@model List<pizza.Models.ContactMessage>
@{
    ViewData["Title"] = "Contact Messages";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">Contact Messages</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Full Name</th>
                    <th>Message Preview</th>
                    <th>Sent Date</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var msg in Model)
                {
                    <tr>
                        <td>@msg.Id</td>
                        <td>@msg.FirstName @msg.LastName</td>
                        <td>@msg.Message.Substring(0, Math.Min(50, msg.Message.Length))...</td>
                        <td>@msg.DateTime.ToString("yyyy-MM-dd HH:mm")</td>
                        <td class="text-center">
                            <a asp-action="Read" asp-route-id="@msg.Id" class="btn btn-sm btn-info me-1" title="Read"><i class="bi bi-eye"></i>Read</a>
                            <a asp-action="Delete" asp-route-id="@msg.Id" class="btn btn-sm btn-danger" title="Delete"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
